                },
                "mcs_min": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 7 
                },
                "mcs_max": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 7 
                },

                "header": {
                    "type": "string",
